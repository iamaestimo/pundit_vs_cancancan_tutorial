<div id="<%= dom_id post %>" class="border rounded-3 p-4">
  <p>
    <strong>Title:</strong>
    <%= link_to post.title, post_path(post) %>
  </p>

  <p>
    <strong>Body:</strong>
    <%= post.body %>
  </p>

  <p>
    <strong>Written by:</strong>
    <%= post.user.email %> (<%= post.user.role %>)
  </p>

</div>
